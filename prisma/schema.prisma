generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model usuarios {
  id_usuario Int    @id @default(autoincrement())
  email      String @unique
  nome       String
  tipo       String
  senha      String
  pedidos    pedidos[]
  avaliacoes avaliacoes[]
  favoritos  favoritos[]
  carrinho   carrinho[]
}

model categorias {
  id       Int        @id @default(autoincrement())
  nome     String     @unique
  produtos produtos[]
}

model produtos {
  id_produto   Int        @id @default(autoincrement())
  nome         String
  descricao    String?
  preco        Int
  estoque      Int
  id_categoria Int
  imagem       String
  categoria    categorias @relation(fields: [id_categoria], references: [id])
  itensPedido  itens_pedido[]
  avaliacoes   avaliacoes[]
  favoritos    favoritos[]
  carrinho     carrinho[]
}

model pedidos {
  id_pedido    Int           @id @default(autoincrement())
  id_usuario   Int
  data_pedido  DateTime
  status       String
  valor_total  Int
  usuario      usuarios      @relation(fields: [id_usuario], references: [id_usuario])
  itens        itens_pedido[]
}

model itens_pedido {
  id_item        Int        @id @default(autoincrement())
  id_pedido      Int
  id_produto     Int
  quantidade     Int
  preco_unitario Int
  pedido         pedidos    @relation(fields: [id_pedido], references: [id_pedido])
  produto        produtos   @relation(fields: [id_produto], references: [id_produto])
}

model avaliacoes {
  id_avaliacao Int       @id @default(autoincrement())
  id_usuario   Int
  id_produto   Int
  nota         Int
  comentario   String?
  data         DateTime
  usuario      usuarios  @relation(fields: [id_usuario], references: [id_usuario])
  produto      produtos  @relation(fields: [id_produto], references: [id_produto])
}

model favoritos {
  id_favorito Int      @id @default(autoincrement())
  id_usuario  Int
  id_produto  Int
  usuario     usuarios @relation(fields: [id_usuario], references: [id_usuario])
  produto     produtos @relation(fields: [id_produto], references: [id_produto])
}

model carrinho {
  id_carinho  Int      @id @default(autoincrement())
  id_usuario  Int
  id_produto  Int
  quantidade  Int
  usuario     usuarios @relation(fields: [id_usuario], references: [id_usuario])
  produto     produtos @relation(fields: [id_produto], references: [id_produto])
}
