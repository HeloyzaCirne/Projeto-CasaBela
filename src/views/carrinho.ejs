<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meu Carrinho</title>
    <link rel="stylesheet" href="/css/carrinho.css">
    <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body>

    <header>
        <a href="/produtos" class="icon-btn">
            <i data-lucide="arrow-left" size="24"></i>
        </a>
        <h1>Meu Carrinho</h1>
        <button class="icon-btn">
        </button>
    </header>

    <main class="cart-container">
        <% produtos.forEach( function(produto) { %>
        <article class="cart-card">
            <div class="card-top">
                <div class="item-image">
                    <img src="<%= produto.produto.imagem %>" alt="Poltrona">
                </div>
                <div class="item-details">
                    <h3 class="item-title"> <%= produto.produto.nome %> </h3>
                    <span class="item-unit-price">R$ <%= produto.produto.preco %></span>
                </div>
                <a href="/produtos/carrinho/remover/<%= produto.id_carrinho %>" class="btn-delete">
                    <i data-lucide="trash-2" size="18"></i>
                </a>
            </div>
            
            <div class="card-bottom">
                <div class="qty-control">
                    <a href="/produtos/carrinho/diminuir/<%= produto.id_carrinho %>" class="qty-btn minus">
                        <i data-lucide="minus" size="16"></i>
                    </a>
                    <span class="qty-value"><%= produto.quantidade %></span>
                    <a href="/produtos/carrinho/adicionar/<%= produto.produto.id_produto %>" class="qty-btn plus">
                        <i data-lucide="plus" size="16"></i>
                    </a>
                </div>
                <div class="item-total">R$ <%= Number(produto.produto.preco) * Number(produto.quantidade) %></div>
            </div>
        </article>
        <% }); %>
        <button class="btn-login">Fechar Compra</button>
    </main>

    <script>
        lucide.createIcons();
    </script>
</body>
</html>